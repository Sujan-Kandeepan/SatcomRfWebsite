@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hide {
        display: none;
    }

    td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>

@Scripts.Render("~/bundles/js/SatcomStats")
<script>setupIndex();</script>
<div class="container hide" id="iframe-temp"></div>

<h2>Select a model family and a model:</h2>
<div class="container row" id="main-data">
    <div class="alert alert-danger hide fade in" id="selection-failed">
        <strong>Error:</strong> Select a family and model before downloading report.
    </div>

    <div class="alert alert-danger hide fade in" id="download-failed">
        <strong>Error:</strong> Cannot generate report when data not found.
    </div>

    <form action="">
        <div class="col-sm-4">
            <select class="form-control" id="families" name="families" onchange="getModelNames(this.value);"></select>
        </div>

        <div class="col-sm-4">
            <select class="form-control" id="models" name="models" onchange="getTable(this.value, families.value)"></select>
        </div>

        <div class="col-sm-4">
            <input type="button" class="form-control btn btn-primary" id="dlxlsx" name="dlbtn" onclick="getxlsxfile(models.value, families.value)" value="Download as Excel file (.xlsx)" />
        </div>
    </form>
</div>

<div class="container hide" id="data-display">
    <hr />

    <div class="alert alert-danger hide fade in" id="getdata-failed">
        <strong>Error:</strong> Failed to get data from server.
    </div>

    <div class="alert alert-info hide fade in" id="getdata-loading">
        <strong style="vertical-align:middle">Loading...</strong>
    </div>

    <table class="table table-striped hide" id="data-table"></table>
</div>